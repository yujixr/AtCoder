{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build (C++)",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=gnu++1y",
                "-g",
                "-O2",
                "-I/opt/boost/gcc/include",
                "-L/opt/boost/gcc/lib",
                "-o",
                "./a.out",
                "${relativeFile}",
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "Build (C)",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-std=gnu11",
                "-g",
                "-o",
                "./a.out",
                "${relativeFile}",
                "-lm"
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$gcc"
        }
    ]
}
